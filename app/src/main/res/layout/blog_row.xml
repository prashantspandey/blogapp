<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:weightSum="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/blog_list_post_image"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_launcher"
            android:padding="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_list_likeEmpty"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:src="@mipmap/ic_thumb_up_white_24dp"            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/com_facebook_auth_dialog_cancel_background"

            android:padding="5dp"
            android:id="@+id/blog_list_displayImage"/>

        <TextView
            android:text="Author:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_list_userName"
            android:textSize="16dp"
            android:padding="5dp"
            android:textStyle="bold|italic"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_list_post_title"
            android:layout_marginBottom="10dp"
            android:text="Title"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_list_post_description"
            android:layout_marginBottom="10dp"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>